<h1>Stages</h1>

<div class="row">
    <div class="col-sm-4">
        <h2>Edit Stage</h2>
        <form action="/admin/stages/edit/{{stage.id}}?_method=PUT" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter title" class="form-control" value="{{stage.name}}">
            </div>
            <button class="btn btn-primary">Update Stage</button>
        </form>
    </div>
</div>