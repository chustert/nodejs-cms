{{> home/my-account-nav}}

<div class="container">
    <h1 class="my-4">Messages</h1>

    <div class="row">
        <div class="col-sm-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>Users</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                        <tr>
                            <td><a href="/my-account/messages/{{_id}}">{{firstName}}</a> <a href="/account/profile/{{_id}}"><i class="fa fa-fw fa-user"></i></a></td>
                        </tr>
                    {{/each}}           
                </tbody>
            </table>
        </div>
        <div class="col-sm-9">
            <table class="table">
                <thead>
                    <tr>
                        {{!-- <th>id</th> --}}
                        <th>From</th>
                        <th>To</th>
                        <th>Message</th>
                        <th>Date</th>
                        {{!-- <th>Delete</th> --}}
                    </tr>
                </thead>
                <tbody>
                    {{#each messages}}
                        <tr>
                            {{!-- <th>{{id}}</th> --}}
                            <td>{{fromUser.firstName}}</td>
                            <td>{{toUser.firstName}}</td>
                            <td>{{body}}</td>
                            <td>{{generateDate date 'MMMM Do YYYY'}}</td>
                            {{!-- <td><a href="/post/{{post.slug}}#{{id}}">View</a></td>
                            <td>
                                <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td> --}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if messagedUser}}
                <!-- Message Form -->
                <div class="card my-4">
                    <h5 class="card-header">Send message to {{messagedUser.firstName}}</h5>
                    <div class="card-body">
                    <form action="/my-account/messages" method="post">
                        <div class="form-group">
                        <textarea name="body" class="form-control" rows="3"></textarea>
                        <input type="hidden" name="id" value="{{messagedUser.id}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </form>
                    </div>
                </div>
            {{/if}}
        </div>        
    </div>
</div>
