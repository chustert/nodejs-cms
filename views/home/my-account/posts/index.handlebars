{{> home/my-account-nav}}

<div class="container">
    <h1 class="my-4">My Posts</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Status</th>
                <th>Category</th>
                <th>Allow Comments</th>
                <th>Date</th>
                <th>View Post</th>
                <th>Edit Post</th>
                <th>Delete Post</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
                <tr>
                    <td>{{id}}</td>
                    {{!-- <td><img height="50px" src="/uploads/{{file}}" alt=""></td> --}}
                    <td>
                        {{#if imgUrl}}
                            <img class="card-img-top" src="{{imgUrl}}" alt="{{title}}">
                        {{/if}}
                    </td>
                    <td>{{title}}</td>
                    <td>{{status}}</td>
                    <td>{{category.name}}</td>
                    <td>{{allowComments}}</td>
                    <td>{{generateDate date 'MMMM Do YYYY'}}</td>
                    <td><a href="/post/{{slug}}">View</a></td>
                    <td><a href="/my-account/posts/edit/{{id}}">Edit</a></td>
                    <td>
                        <form action="/my-account/posts/{{id}}?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>