{{> home/my-account-nav}}

<div class="container">
    <h1 class="my-4">Comments</h1>

    <table class="table">
    <thead>
        <tr>
        <th>id</th>
        <th>Owner</th>
        <th>Post Title</th>
        <th>Date</th>
        <th>View</th>
        <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        {{#each comments}}
            <tr>
                <th>{{id}}</th>
                <td>{{user.firstName}}</td>
                <td>{{post.title}}</td>
                <td>{{generateDate date 'MMMM Do YYYY'}}</td>
                <td><a href="/post/{{post.slug}}">View</a></td>
                <td>
                    <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        
    </tbody>
    </table>
</div>
