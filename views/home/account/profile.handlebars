<div class="container">
    <h1 class="my-4">Profile: {{user.firstName}}</h1>

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#">User Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/account/profile/{{user.id}}/posts">Posts</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{user.firstName}} {{user.lastName}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{user.email}}</h6>
            <p class="card-text">Role: {{user.role}}</p>
        </div>
    </div>
    <!-- Message Form -->
    <div class="card my-4">
        <h5 class="card-header">Send message to {{user.firstName}}</h5>
        <div class="card-body">
        <form action="/my-account/messages" method="post">
            <div class="form-group">
            <textarea name="body" class="form-control" rows="3"></textarea>
            <input type="hidden" name="id" value="{{user.id}}">
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
        </div>
    </div>
</div>