<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Forgot Password</div>

        <div class="card-body">
            <form action="/forgot-password" method="post">
                {{!-- {{#if error}}
                    <div class="alert alert-danger">
                        {{error}}
                    </div>
                {{/if}} --}}
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input name="email" class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/login">Login</a>
                <a class="d-block small" href="/register">Register an Account</a>
                <a class="d-block small" href="/">Home</a>
            </div>
        </div>
    </div>
</div>