<div class="container">
  <div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

      <h1 class="my-4">Home
        {{!-- <small>Secondary Text</small> --}}
      </h1>

      {{#if featuredPost}}
        <h2>Featured Post</h2>
        
        <div class="card mb-4">
          {{#if featuredPost.imgUrl}}
            <img class="card-img-top" src="{{featuredPost.imgUrl}}" alt="{{featuredPost.title}}">
          {{/if}}
          <div class="card-body">
            <h2 class="card-title">{{featuredPost.title}}</h2>
            <p class="card-text">{{featuredPost.body}}</p>
            <a href="/post/{{featuredPost.slug}}" class="btn btn-primary">Read More &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            Posted on {{generateDate featuredPost.date 'MMMM Do YYYY'}} by <a href="/account/profile/{{featuredPost.user._id}}">{{featuredPost.user.firstName}}</a> in <a href="/category/{{featuredPost.category._id}}">{{featuredPost.category.name}}</a> | {{featuredPost.comments.length}} Comments | {{featuredPost.likes}} Likes
          </div>
        </div>
      {{/if}}

      <h2>All Posts</h2>

      {{#each posts}}
        <!-- Blog Post -->
        <div class="card mb-4">
          {{#if imgUrl}}
            <img class="card-img-top" src="{{imgUrl}}" alt="{{title}}">
          {{/if}}
          <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <p class="card-text">{{body}}</p>
            <a href="/post/{{slug}}" class="btn btn-primary">Read More &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            Posted on {{generateDate date 'MMMM Do YYYY'}} by <a href="/account/profile/{{user._id}}">{{user.firstName}}</a> in <a href="/category/{{category._id}}">{{category.name}}</a> | {{comments.length}} Comments | {{likes}} Likes
          </div>
        </div>
      {{/each}}

      <!-- Pagination -->
      <ul class="pagination justify-content-center mb-4">
        {{#paginate current=current pages=pages}}{{/paginate}}


        {{!-- <li class="page-item">
          <a class="page-link" href="#">&larr; Older</a>
        </li>
        <li class="page-item disabled">
          <a class="page-link" href="#">Newer &rarr;</a>
        </li> --}}
      </ul>

      <h2>Most Popular Posts</h2>

      {{#each postsPopular}}
        <!-- Blog Post -->
        <div class="card mb-4">
          {{#if imgUrl}}
            <img class="card-img-top" src="{{imgUrl}}" alt="{{title}}">
          {{/if}}
          <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <p class="card-text">{{body}}</p>
            <a href="/post/{{slug}}" class="btn btn-primary">Read More &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            Posted on {{generateDate date 'MMMM Do YYYY'}} by <a href="/account/profile/{{user._id}}">{{user.firstName}}</a> in <a href="/category/{{category._id}}">{{category.name}}</a> | {{comments.length}} Comments | {{likes}} Likes
          </div>
        </div>
      {{/each}}

    </div>

    <!-- Sidebar Widgets Column -->
    {{> home/sidebar}}

  </div>
  <!-- /.row -->
</div>